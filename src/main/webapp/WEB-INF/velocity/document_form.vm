<!DOCTYPE html>
<html>
<head>
    #include("common/styles_import.txt")
    <title>Документ [$docCommand.documentId]</title>
    <meta charset="UTF-8">

    <script>
        function caseChanged()
        {
            document.getElementById("caseForm").submit();
        }
    </script>

</head>
<body>
    #parse("common/navigation.vm")

    <div class="contentwrap">
        Документ
        <br>
        <img src="/documents/static/images/docs64.png" alt="Документ">

        <table border="0">
        <form method="POST" id="caseForm" action="/documents/documents/$docCommand.documentId/caseChanged">
                <tr>
                    <td>Дело:</td>
                    <td>#springFormSingleSelect("caseIdCommand.caseId" $caseFolders 'onchange="caseChanged()"')</td>
                </tr>
        </form>

        <form method="POST" id="editForm" action="/documents/documents/$docCommand.documentId/save">
            #springFormHiddenInput("docCommand.documentId" "")
                <tr>
                    <td>Корреспондент:</td>
                    <td>#springFormSingleSelect("docCommand.correspondentId" $correspondents '')</td>
                </tr>
                <tr>
                    <td>Регистрационный номер:</td>
                    <td>#springFormInput("docCommand.innerNumber" "")</td>
                </tr>
                <tr>
                    <td>Описание:</td>
                    <td>#springFormTextarea("docCommand.description" "")</td>
                </tr>
                #include("common/edit_form_submit.txt")
        </form>
        </table>

        #if ($docCommand.documentId != -1)

            <div class="hdivider">
            </div>

            <form method="get" action="/documents/documents/$docCommand.documentId/fileUpload">
                <input type="submit" value="Загрузить изображение" />
            </form>
        #end
    </div>
</body>
</html>