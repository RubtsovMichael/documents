<!DOCTYPE html>
<html>
<head>
    #include("common/styles_import.txt")
    <title>Подразделения</title>
</head>
<body>
    #parse("common/navigation.vm")

    <div class="float-left">
        <h3>Подразделения</h3>

        <a href="#springUrl("/departments/-1")">Создать новое</a>
        <table class="list">
        #foreach ($department in $departments)
            <tr>
                <td><a href="#springUrl("/departments/$department.departmentId")">$department.code $department.shortName [$department.departmentId]</a></td>
                <td>$department.fullName</td>
            </tr>
        #end
        </table>
    </div>
</body>
</html>