<!DOCTYPE html>
<html>
<head>
    #include("common/styles_import.txt")
    <title>Должности</title>
</head>
<body>
    #parse("common/navigation.vm")

    <div class="contentwrap">
        Должности
        <br>
        <img src="/documents/static/images/posts64.png" alt="Должности">
        <form method="get" action="/documents/posts/-1">
            <input type="submit" value="Добавить"/>
        </form>
        <table class="list">
            <tr>
                <th>Наименование</th>
                <th>Полное наименование</th>
            </tr>
        #foreach ($post in $posts)
            <tr>
                <td><a href="#springUrl("/posts/$post.postId")">$post.displayName [$post.postId]</a></td>
                <td>$post.fullName</td>
            </tr>
        #end
        </table>
    </div>
</body>
</html>